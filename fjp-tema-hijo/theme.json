{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "fjp-primary",
                    "color": "#F2385A",
                    "name": "FJP Primario (Rosa)"
                },
                {
                    "slug": "fjp-secondary",
                    "color": "#D95F76",
                    "name": "FJP Secundario (Rosa Suave)"
                },
                {
                    "slug": "fjp-teal",
                    "color": "#5BD9D9",
                    "name": "FJP Turquesa"
                },
                {
                    "slug": "fjp-green",
                    "color": "#56BF66",
                    "name": "FJP Verde"
                },
                {
                    "slug": "fjp-background",
                    "color": "#F2F2F2",
                    "name": "FJP Fondo"
                },
                {
                    "slug": "fjp-text",
                    "color": "#333333",
                    "name": "FJP Texto"
                },
                {
                    "slug": "fjp-white",
                    "color": "#FFFFFF",
                    "name": "Blanco"
                },
                {
                    "slug": "fjp-dark-gray",
                    "color": "#6c757d",
                    "name": "Gris Oscuro"
                }
            ],
            "gradients": [
                {
                    "slug": "fjp-gradient-primary",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-primary) 0%, var(--wp--preset--color--fjp-secondary) 100%)",
                    "name": "Gradiente Primario"
                },
                {
                    "slug": "fjp-gradient-teal",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-teal) 0%, #2A9D8F 100%)",
                    "name": "Gradiente Turquesa"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Montserrat', sans-serif",
                    "slug": "heading",
                    "name": "Encabezados (Montserrat)"
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "slug": "body",
                    "name": "Cuerpo (Inter)"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.9rem",
                    "name": "Peque√±o"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medio"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Grande"
                },
                {
                    "slug": "xl",
                    "size": "2rem",
                    "name": "Extra Grande"
                },
                {
                    "slug": "xxl",
                    "size": "3rem",
                    "name": "Gigante"
                }
            ]
        },
        "spacing": {
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "10px",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "size": "20px",
                    "name": "SM"
                },
                {
                    "slug": "md",
                    "size": "30px",
                    "name": "MD"
                },
                {
                    "slug": "lg",
                    "size": "40px",
                    "name": "LG"
                },
                {
                    "slug": "xl",
                    "size": "60px",
                    "name": "XL"
                },
                {
                    "slug": "xxl",
                    "size": "80px",
                    "name": "XXL"
                },
                {
                    "slug": "huge",
                    "size": "100px",
                    "name": "Huge"
                }
            ],
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "color": {
            "text": "var(--wp--preset--color--fjp-text)",
            "background": "var(--wp--preset--color--fjp-background)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--fjp-primary)"
                }
            },
            "button": {
                "color": {
                    "text": "var(--wp--preset--color--fjp-white)",
                    "background": "var(--wp--preset--color--fjp-primary)"
                },
                "border": {
                    "radius": "50px"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "bottom": "12px",
                        "left": "30px",
                        "right": "30px"
                    }
                }
            }
        }
    }
}
