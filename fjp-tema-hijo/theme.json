{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "defaultPalette": false,
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "link": true,
            "palette": [
                {
                    "slug": "fjp-primary",
                    "color": "#0056D2",
                    "name": "Azul Primario FJP"
                },
                {
                    "slug": "fjp-secondary",
                    "color": "#28A745",
                    "name": "Verde Secundario"
                },
                {
                    "slug": "fjp-accent",
                    "color": "#E63946",
                    "name": "Rojo Acento"
                },
                {
                    "slug": "fjp-teal",
                    "color": "#2A9D8F",
                    "name": "Turquesa"
                },
                {
                    "slug": "fjp-dark-blue",
                    "color": "#264653",
                    "name": "Azul Oscuro"
                },
                {
                    "slug": "fjp-yellow",
                    "color": "#E9C46A",
                    "name": "Amarillo"
                },
                {
                    "slug": "fjp-orange",
                    "color": "#F4A261",
                    "name": "Naranja"
                },
                {
                    "slug": "fjp-text",
                    "color": "#333333",
                    "name": "Texto Principal"
                },
                {
                    "slug": "fjp-light-gray",
                    "color": "#f8f9fa",
                    "name": "Gris Claro"
                },
                {
                    "slug": "fjp-gray",
                    "color": "#e9ecef",
                    "name": "Gris Medio"
                },
                {
                    "slug": "fjp-dark-gray",
                    "color": "#6c757d",
                    "name": "Gris Oscuro"
                },
                {
                    "slug": "fjp-white",
                    "color": "#FFFFFF",
                    "name": "Blanco"
                },
                {
                    "slug": "fjp-black",
                    "color": "#000000",
                    "name": "Negro"
                }
            ],
            "gradients": [
                {
                    "slug": "fjp-gradient-brand",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-primary) 0%, var(--wp--preset--color--fjp-secondary) 100%)",
                    "name": "Gradiente Marca FJP"
                },
                {
                    "slug": "fjp-gradient-teal",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-teal) 0%, var(--wp--preset--color--fjp-dark-blue) 100%)",
                    "name": "Gradiente Turquesa"
                },
                {
                    "slug": "fjp-gradient-dark",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-dark-blue) 0%, var(--wp--preset--color--fjp-teal) 100%)",
                    "name": "Gradiente Oscuro"
                },
                {
                    "slug": "fjp-gradient-gold",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-yellow) 0%, var(--wp--preset--color--fjp-orange) 100%)",
                    "name": "Gradiente Dorado"
                },
                {
                    "slug": "fjp-gradient-sunset",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--fjp-orange) 0%, var(--wp--preset--color--fjp-accent) 100%)",
                    "name": "Gradiente Atardecer"
                }
            ],
            "duotone": [
                {
                    "colors": [ "#0056D2", "#FFFFFF" ],
                    "slug": "fjp-duotone-primary",
                    "name": "Duotono Primario"
                },
                {
                    "colors": [ "#2A9D8F", "#264653" ],
                    "slug": "fjp-duotone-teal",
                    "name": "Duotono Turquesa"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": true,
            "fontFamilies": [
                {
                    "fontFamily": "'Montserrat', sans-serif",
                    "slug": "heading",
                    "name": "Encabezados (Montserrat)"
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
                    "slug": "body",
                    "name": "Cuerpo (Inter)"
                },
                {
                    "fontFamily": "'Georgia', 'Times New Roman', Times, serif",
                    "slug": "serif",
                    "name": "Serif (Georgia)"
                },
                {
                    "fontFamily": "'Courier New', Courier, monospace",
                    "slug": "monospace",
                    "name": "Monospace"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "0.75rem",
                    "name": "Extra Peque침o"
                },
                {
                    "slug": "small",
                    "size": "0.9rem",
                    "name": "Peque침o"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medio"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Grande"
                },
                {
                    "slug": "xl",
                    "size": "1.5rem",
                    "name": "Extra Grande"
                },
                {
                    "slug": "xxl",
                    "size": "2rem",
                    "name": "2XL"
                },
                {
                    "slug": "xxxl",
                    "size": "2.5rem",
                    "name": "3XL"
                },
                {
                    "slug": "huge",
                    "size": "3rem",
                    "name": "Gigante"
                },
                {
                    "slug": "massive",
                    "size": "3.5rem",
                    "name": "Masivo"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.625rem",
                    "name": "XS (10px)"
                },
                {
                    "slug": "sm",
                    "size": "1.25rem",
                    "name": "SM (20px)"
                },
                {
                    "slug": "md",
                    "size": "1.875rem",
                    "name": "MD (30px)"
                },
                {
                    "slug": "lg",
                    "size": "2.5rem",
                    "name": "LG (40px)"
                },
                {
                    "slug": "xl",
                    "size": "3.75rem",
                    "name": "XL (60px)"
                },
                {
                    "slug": "xxl",
                    "size": "5rem",
                    "name": "XXL (80px)"
                },
                {
                    "slug": "huge",
                    "size": "6.25rem",
                    "name": "Huge (100px)"
                }
            ],
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "custom": {
            "spacing": {
                "gap": "1.875rem"
            },
            "border": {
                "radius": {
                    "xs": "5px",
                    "sm": "10px",
                    "md": "15px",
                    "lg": "20px",
                    "xl": "30px",
                    "pill": "50px",
                    "circle": "50%"
                }
            },
            "shadow": {
                "sm": "0 2px 20px rgba(0, 0, 0, 0.1)",
                "md": "0 4px 15px rgba(0, 86, 210, 0.3)",
                "lg": "0 10px 30px rgba(0, 0, 0, 0.1)",
                "xl": "0 20px 40px rgba(0, 0, 0, 0.15)"
            },
            "transition": {
                "default": "all 0.3s ease",
                "fast": "all 0.15s ease",
                "slow": "all 0.5s ease"
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "color": {
            "text": "var(--wp--preset--color--fjp-text)",
            "background": "var(--wp--preset--color--fjp-white)"
        },
        "spacing": {
            "blockGap": "1.875rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--huge)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--fjp-primary)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "1.5rem"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xxl)",
                    "fontWeight": "700",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--fjp-primary)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "1.25rem"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xl)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                },
                "color": {
                    "text": "var(--wp--preset--color--fjp-dark-blue)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600"
                },
                "color": {
                    "text": "var(--wp--preset--color--fjp-dark-blue)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "600",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--fjp-primary)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--fjp-dark-blue)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "color": {
                    "text": "var(--wp--preset--color--fjp-white)",
                    "background": "var(--wp--preset--color--fjp-primary)"
                },
                "typography": {
                    "fontWeight": "600",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                },
                "border": {
                    "radius": "50px",
                    "width": "0px"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "bottom": "12px",
                        "left": "30px",
                        "right": "30px"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "#0047b3"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "#0047b3"
                    }
                },
                ":active": {
                    "color": {
                        "background": "#003d99"
                    }
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--md)",
                        "bottom": "var(--wp--preset--spacing--md)"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--md)"
                }
            },
            "core/column": {
                "spacing": {
                    "padding": {
                        "top": "0",
                        "bottom": "0",
                        "left": "var(--wp--preset--spacing--sm)",
                        "right": "var(--wp--preset--spacing--sm)"
                    }
                }
            },
            "core/quote": {
                "border": {
                    "width": "0 0 0 4px",
                    "color": "var(--wp--preset--color--fjp-yellow)",
                    "style": "solid"
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--md)"
                    }
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "color": "var(--wp--preset--color--fjp-primary)",
                    "style": "solid"
                }
            },
            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--fjp-gray)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Encabezado",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Pie de P치gina",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "blank",
            "title": "P치gina en Blanco",
            "postTypes": [ "page" ]
        },
        {
            "name": "full-width",
            "title": "Ancho Completo",
            "postTypes": [ "page", "post" ]
        }
    ]
}
